    <ApplicationIcon>favicon.ico</ApplicationIcon>
    <AssemblyName>TravianBotSharp</AssemblyName>
    <AssemblyVersion>1975.4.30</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\clay.png" />
    <None Remove="Resources\crop.png" />
    <None Remove="Resources\iron.png" />
    <None Remove="Resources\wood.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="favicon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\clay.png" />
    <Resource Include="Resources\crop.png" />
    <Resource Include="Resources\iron.png" />
    <Resource Include="Resources\wood.png" />
  </ItemGroup>

  <ItemGroup>
