<views:CheckBoxWithInputUcBase
        x:Class="WPFUI.Views.Uc.CheckBoxWithInputUc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WPFUI.Views.Uc"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        x:Name="root">
    <StackPanel Orientation="Horizontal">
        <CheckBox x:Name="IsChecked" Content="{Binding Text, ElementName=root}" VerticalAlignment="Center" Width="NaN" />
        <xctk:IntegerUpDown x:Name="Value" Minimum="0" />
        <Label Content="{Binding Unit, ElementName=root}" Width="NaN" />
    </StackPanel>
</views:CheckBoxWithInputUcBase>