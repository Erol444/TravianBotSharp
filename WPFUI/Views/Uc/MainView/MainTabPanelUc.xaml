<v:MainTabPanelUcBase
    x:Class="WPFUI.Views.Uc.MainView.MainTabPanelUc"
    xmlns:v="clr-namespace:WPFUI.Views.Uc.MainView"
    xmlns:viewmodels="clr-namespace:WPFUI.ViewModels.Tabs"
    xmlns:views="clr-namespace:WPFUI.Views.Tabs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Add" />
            <Button Content="Remove" />
        </StackPanel>
        <ContentControl x:Name="TabPanel" Grid.Row="1">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodels:NoAccountViewModel}">
                    <views:NoAccountPage />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</v:MainTabPanelUcBase>