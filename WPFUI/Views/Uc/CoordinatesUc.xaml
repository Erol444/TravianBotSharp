<rxui:ReactiveUserControl
        x:Class="WPFUI.Views.Uc.CoordinatesUc"
        x:TypeArguments="vms:CoordinatesViewModel"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:WPFUI.ViewModels.Uc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal" Height="25">
        <Label x:Name="TextLabel" Width="NaN" />
        <Label x:Name="XCoordinateLabel" Content="X" />
        <TextBox x:Name="XCoordinate" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Width="40" />
        <Label x:Name="YCoordinateLabel" Content="Y" />
        <TextBox x:Name="YCoordinate" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Width="40" />
    </StackPanel>
</rxui:ReactiveUserControl>