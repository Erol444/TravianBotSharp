<rxui:ReactiveUserControl
        x:Class="WPFUI.Views.Uc.TroopTrainingSelectorUc"
        x:TypeArguments="vms:TroopTrainingSelectorViewModel"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:WPFUI.ViewModels.Uc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WPFUI.Views.Uc"
        x:Name="root">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <StackPanel>
        <Label Content="{Binding Text, ElementName=root}" Width="NaN" />
        <ComboBox x:Name="ComboBox">
            <ComboBoxItem>Phalanx</ComboBoxItem>
            <ComboBoxItem>Swordman</ComboBoxItem>
        </ComboBox>
        <controls:ToleranceUc x:Name="TotalTrainTime" Text="Fill queue for" Unit="min(s)" />
        <CheckBox Visibility="{Binding Great, ElementName=root, Converter={StaticResource BooleanToVisibilityConverter}}" >Train in great version too</CheckBox>
    </StackPanel>
</rxui:ReactiveUserControl>