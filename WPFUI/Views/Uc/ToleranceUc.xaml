<rxui:ReactiveUserControl
        x:Class="WPFUI.Views.Uc.ToleranceUc"
        x:TypeArguments="vms:ToleranceViewModel"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:WPFUI.ViewModels.Uc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal" Height="25">
        <Label x:Name="TextLabel" Width="NaN" />
        <TextBox x:Name="MainValue" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Width="40" />
        <Label x:Name="ToleranceLabel" Content="±" />
        <TextBox x:Name="Tolerance" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Width="40" />
        <Label x:Name="UnitLabel" Width="NaN" />
    </StackPanel>
</rxui:ReactiveUserControl>