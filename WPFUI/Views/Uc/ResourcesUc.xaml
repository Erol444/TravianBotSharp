<rxui:ReactiveUserControl
        x:Class="WPFUI.Views.Uc.ResourcesUc"
        x:TypeArguments="vms:ResourcesViewModel"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:WPFUI.ViewModels.Uc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <Label x:Name="WoodLabel" Content="Wood" />
        <TextBox x:Name="Wood" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Width="40" />
        <Label x:Name="ClayLabel" Content="Clay" />
        <TextBox x:Name="Clay" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Width="40" />
        <Label x:Name="IronLabel" Content="Iron" />
        <TextBox x:Name="Iron" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Width="40" />
        <Label x:Name="CropLabel" Content="Crop" />
        <TextBox x:Name="Crop" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Width="40" />
    </StackPanel>
</rxui:ReactiveUserControl>