<reactiveui:ReactivePage
      x:Class="WPFUI.Views.Tabs.Villages.MarketPage"
      x:TypeArguments="vms:MarketViewModel"
      xmlns:vms="clr-namespace:WPFUI.ViewModels.Tabs.Villages"
      xmlns:controls="clr-namespace:WPFUI.Views.Uc"
      xmlns:reactiveui="http://reactiveui.net"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#FFE5E5E5" Margin="0,2,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>
        <Grid Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="SaveButton" Grid.Column="2" Content="Save" FontSize="15" FontWeight="Normal" Margin="5,0,5,0" />
        </Grid>
        <StackPanel Grid.Row="1" Background="#FFE5E5E5" Margin="0,2,0,0">    
            <CheckBox x:Name="IsSendExcessResources" Content="Send out resources automatically" />
            <controls:ResourcesUc x:Name="SendOutLimit" Margin="10,0,10,0"/>
        </StackPanel>
    </Grid>
</reactiveui:ReactivePage>