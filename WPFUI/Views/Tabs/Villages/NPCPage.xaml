<reactiveui:ReactivePage
      x:Class="WPFUI.Views.Tabs.Villages.NPCPage"
      x:TypeArguments="vms:NPCViewModel"
      xmlns:vms="clr-namespace:WPFUI.ViewModels.Tabs.Villages"
      xmlns:controls="clr-namespace:WPFUI.Views.Uc"
      xmlns:reactiveui="http://reactiveui.net"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Background="#FFE5E5E5" Margin="0,2,0,0">    
        <Button x:Name="UpdateResource"  Content="Update resource" Margin="10" Height="50"/>
        <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
            <Label Content="Last update time: "  VerticalAlignment="Center"/>
            <TextBlock x:Name="UpdateTime" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
        </StackPanel>
        <controls:ResourcesWithStorageUc x:Name="Storage" Margin="20,0,10,0"/>
        <controls:ResourcesUc x:Name="Ratio" Margin="10,0,10,0"/>
        <Button x:Name="NPC"  Content="NPC" Margin="10"  Height="50" />
    </StackPanel>
</reactiveui:ReactivePage>