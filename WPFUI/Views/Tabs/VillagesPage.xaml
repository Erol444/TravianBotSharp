<reactiveui:ReactivePage
      x:Class="WPFUI.Views.Tabs.VillagesPage"
      x:TypeArguments="local:VillagesViewModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPFUI.ViewModels.Tabs"
      xmlns:reactiveui="http://reactiveui.net"
      xmlns:Behaviours="clr-namespace:WPFUI.Behaviours"
      xmlns:tabs="clr-namespace:WPFUI.Views.Tabs.Villages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VillagesPage">

    <Grid Background="#FFE5E5E5" Margin="0,2,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*" />
            <ColumnDefinition Width="307*" />
        </Grid.ColumnDefinitions>
        <ListView x:Name="VillagesGrid" SelectionMode="Single" IsSynchronizedWithCurrentItem="True" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"   Behaviours:GridViewColumnResize.Width="*" />
                    <GridViewColumn Header="Coords" DisplayMemberBinding="{Binding Coords}"   Behaviours:GridViewColumnResize.Width="*" />
                </GridView>
            </ListView.View>
        </ListView>
        <TabControl Grid.Column="1" Margin="1,0,0,0">
            <TabItem x:Name="NoVillageTab" Header="No village">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="NO VILLAGE IS SELECTED" VerticalAlignment="Center" TextAlignment="Center" LineHeight="11" />
                </Grid>
            </TabItem>
            <TabItem x:Name="BuildTab" Header="Build">
                <Frame>
                    <Frame.Content>
                        <tabs:BuildPage x:Name="BuildPage" />
                    </Frame.Content>
                </Frame>
            </TabItem>
            <TabItem x:Name="SettingsTab" Header="Settings">
                <Frame>
                    <Frame.Content>
                        <tabs:SettingsPage x:Name="SettingsPage" />
                    </Frame.Content>
                </Frame>
            </TabItem>
            <TabItem x:Name="NPCTab" Header="NPC">
                <Frame>
                    <Frame.Content>
                        <tabs:NPCPage x:Name="NPCPage" />
                    </Frame.Content>
                </Frame>
            </TabItem>
            <TabItem x:Name="TroopsTab" Header="Troop">
                <Frame>
                    <Frame.Content>
                        <tabs:TroopsPage x:Name="TroopsPage" />
                    </Frame.Content>
                </Frame>
            </TabItem>
            <TabItem x:Name="InfoTab" Header="Info">
                <Frame>
                    <Frame.Content>
                        <tabs:InfoPage x:Name="InfoPage" />
                    </Frame.Content>
                </Frame>
            </TabItem>
            <TabItem x:Name="MarketTab" Header="Market">
                <Frame>
                    <Frame.Content>
                        <tabs:MarketPage x:Name="MarketPage" />
                    </Frame.Content>
                </Frame>
            </TabItem>
        <TabControl x:Name="Tabs" Grid.Column="1" Margin="1,0,0,0">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Frame Content="{Binding Content}" NavigationUIVisibility="Hidden" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</reactiveui:ReactivePage>