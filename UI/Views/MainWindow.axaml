<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UI.ViewModels"
        xmlns:uc="using:UI.Views.UserControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UI.Views.MainWindow"
        Icon="/Assets/favicon.ico"
        Title="TravianBotSharp">
  <Grid>
    <Grid x:Name="MainGrid" Margin="5,5,5,5" ColumnDefinitions="100*,410*">
      <DockPanel>
        <uc:ButtonsPanelUc x:Name="ButtonPanel" DockPanel.Dock="Top" />
        <uc:AccountTableUc x:Name="AccountTable" DockPanel.Dock="Bottom" />
      </DockPanel>
      <uc:TabPanelUc Grid.Column="1" Margin="5,0,0,0" />
    </Grid>
    <uc:LoadingOverlayUc x:Name="LoadingOverlay" />
  </Grid>
</Window>